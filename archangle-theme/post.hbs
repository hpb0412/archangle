{{!< default}}

{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{> "header"}}

{{#post}}
<main>
    <div class="content">
        <article class="{{post_class}}">
            <p class="post-meta"><time>{{date published_at format="DD-MM-YYYY"}}</time> {{tags prefix="â€¢ "}}</p>
            <h1 class="post-title">{{title}}</h1>
            {{#if feature_image}}
            <figure class="post-full-image">
                <img src="{{img_url feature_image size="m"}}" srcset="{{img_url feature_image size="s"}} 300w,
                                                {{img_url feature_image size="m"}} 600w,
                                                {{img_url feature_image size="l"}} 1000w,
                                                {{img_url feature_image size="xl"}} 2000w"
                    sizes="(max-width: 1000px) 400px, 700px" loading="lazy" alt="{{title}}" />
            </figure>
            {{/if}}
            <div>{{content}}</div>
        </article>
    </div>
</main>
{{/post}}

{{> "footer"}}