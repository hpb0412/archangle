{{!< default}}

{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{> "header"}}

<main>
    <ul class="post-thumbnail-list">
        {{#foreach posts}}
        <li id="{{id}}">
            <div class="post-thumbnail">
                <article>
                    <a href="{{url}}">
                        <div class="post-img-frame">
                            <picture>
                                <img src="{{img_url feature_image size="m"}}" srcset="{{img_url feature_image size="s"}} 300w,
                                {{img_url feature_image size="m"}} 600w,
                                {{img_url feature_image size="l"}} 1000w,
                                {{img_url feature_image size="xl"}} 2000w" sizes="(max-width: 1000px) 400px, 700px"
                                    loading="lazy" alt="{{title}}" />
                            </picture>
                        </div>
                        <h1 class="post-title">{{title}}</h1>
                    </a>
                    <div class="inner">
                        <p><time class="post-time">{{date published_at format="DD-MM-YYYY"}}</time>
                            {{tags prefix=" â€¢ "}}</p>
                    </div>
                </article>
            </div>
        </li>
        {{/foreach}}
    </ul>
    {{pagination}}
</main>

{{> "footer"}}