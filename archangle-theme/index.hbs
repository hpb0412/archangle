{{!< default}}

{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{> "header"}}

<main>
    <ul>
        {{#foreach posts}}
        <li data-id="{{id}}" class="post-thumbnail">
            <article>
                <a href="{{url}}">
                    <div class="img-frame">
                        <picture>
                            <img src="{{img_url feature_image size="m"}}" srcset="{{img_url feature_image size="s"}} 300w,
                                {{img_url feature_image size="m"}} 600w,
                                {{img_url feature_image size="l"}} 1000w,
                                {{img_url feature_image size="xl"}} 2000w" sizes="(max-width: 1000px) 400px, 700px"
                                loading="lazy" alt="{{title}}" />
                        </picture>
                    </div>
                </a>
                <div class="inner">
                    <h1>{{title}}</h1>
                    <p><time>{{date published_at format="DD-MM-YYYY"}}</time> {{tags prefix="â€¢ "}}</p>
                    {{!-- <p>{{excerpt}}</p> --}}
                </div>
            </article>
        </li>
        {{/foreach}}
    </ul>
    {{pagination}}
</main>

{{> "footer"}}